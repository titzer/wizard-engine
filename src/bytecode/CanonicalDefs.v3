def BR() {
	var depth = imm_readULEB32();
	var label #sidetable = f_getLabel(depth);
	return doBranch(label);
}
def BR_IF() {
	var depth = imm_readULEB32();
	var label #sidetable = f_getLabel(depth);
	var cond = pop_u32();
	if (u32.!=(cond, 0)) return doBranch(label);
	else return doFallthru();
}
def BR_TABLE() {
    var labels #sidetable = imm_readLabels();
    var key = pop_u32();
    doSwitch(labels, key);
}
def BLOCK() {
	var bt = imm_readBlockType();
	doBlock(bt);
}
def LOOP() {
	var bt = imm_readBlockType();
