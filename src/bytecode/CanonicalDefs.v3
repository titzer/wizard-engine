def I32_DIV_S() {
	var b = pop_u32(), a = pop_u32();
	if (u32.==(b, 0)) return trapDivideByZero();
	if (bool.&&(u32.==(b, u32.view(-1)), u32.==(a, u32.view(-2_147_483_648)))) return trapDivideUnrepresentable();
	var r = U32_div_s(a, b);
	push_u32(r);
}
def I32_DIV_U() {
	var b = pop_u32(), a = pop_u32();
	if (u32.==(b, 0)) return trapDivideByZero();
	var r = u32./(a, b);
	push_u32(r);
}
