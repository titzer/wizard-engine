}
def IF() {
	var bt = imm_readBlockType();
	var cond = pop_u32();
	var label #sidetable = doIf(bt);
	if (u32.==(cond, 0)) return doBranch(label);
	else return doFallthru();
}
def ELSE() {
	var label #sidetable = doElse();
	return doBranch(label);
}
def END() {
	doEnd();
	if (f_isAtEnd()) return doReturn();
}
def RETURN() {
	return doReturn();
